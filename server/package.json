{
  "name": "server",
  "version": "1.0.0",
  "description": "Ramenrogu BackEnd codebase.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/index.js",
    "dev" : "concurrently \"npx tsc -w\" \"yarn server\" -n tsc,server -c green,blue",
    "server": "nodemon src/index.js --ignore client",
    "lint": "eslint --fix \"./src/**/*.{js,json}\"",
    "format": "prettier --write \"./src/**/*.{js,json}\""
  },
  "author": "Jeel Patel, Siddharth Rawat",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-jwt": "^6.1.1",
    "express-rate-limit": "^6.3.0",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.0",
    "morgan": "^1.10.0",
    "rate-limit-mongo": "^2.3.2",
    "router": "^1.3.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.27",
    "concurrently": "^7.1.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "nodemon": "^2.0.15",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
